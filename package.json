{
  "name": "mobile-roma",
  "private": true,
  "version": "1.2.14",
  "description": "Mobile Roma - Phone Shop Management System",
  "main": "src/main.cjs",
  "author": "Mobile Roma Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --port 5173\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "make": "electron-builder",
    "publish": "electron-builder --publish=always",
    "draft": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "add-sample": "node add-sample-data.cjs && powershell -ExecutionPolicy Bypass -File apply-sample-data.ps1",
    "clean": "powershell -Command \"Remove-Item -Path 'dist' -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'node_modules' -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'package-lock.json' -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'database/*.bak' -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'release/builder-*.yml' -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'release/builder-*.yaml' -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'src/**/*.backup' -Force -ErrorAction SilentlyContinue\"",
    "fresh-install": "npm run clean && npm install"
  },
  "dependencies": {
    "appwrite": "^18.1.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.0",
    "electron-log": "^5.4.2",
    "electron-settings": "^4.0.4",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.525.0",
    "react": "^18.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "icon": "public/app-icon.ico",
    "appId": "com.mobilerema.phoneShop",
    "productName": "Mobile Roma",
    "artifactName": "Mobile Roma Setup ${version}.${ext}",
    "copyright": "Copyright Â© 2025 Mobile Roma",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "database/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database/",
        "to": "database/"
      },
      {
        "from": "public/app-icon.ico",
        "to": "app-icon.ico"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "Rekan-Maqsoud",
      "repo": "Phone-Shop",
      "private": false,
      "releaseType": "release"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "win": {
      "target": "nsis",
      "icon": "public/app-icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "publisherName": "Mobile Roma",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Mobile Roma - Phone Shop Management",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "Office",
      "warningsAsErrors": false
    }
  }
}
